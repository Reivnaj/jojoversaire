<h1> Crée un évènement </h1>

<%= form_with model: @event, local: true do |form| %>

<div class="container col-lg-6 col-md-3 col-sm-12">
	<div class="form-group text-center ">

		<div class="form-group">
			<%= form.label :start_date, 'Date de début' %><br>
			<%= form.date_field(:start_date) %>
		</div>

		<div class="form-group">
			<%= form.label :duration, 'Durée' %><br>
			<%= form.number_field(:duration, in: 0..120, step: 5) %>
		</div>

		<div class="form-group">
			<%= form.label :title, 'Titre' %><br>
			<%= form.text_field :title, class: 'form-control' , required: true %>
		</div>

		<div class="form-group">
			<%= form.label :description, 'Description' %><br>
			<%= form.text_area :description, class: 'form-control' , required: true %>
		</div>

		<div class="form-group">
			<%= form.label :price, 'Prix' %><br>
			<%= form.number_field(:price, in: 1..1000) %>
		</div>	

		<div class="form-group">
			<%= form.label :location, 'Lieu' %><br>
			<%= form.text_field :location, class: 'form-control' , required: true %>
		</div>		

		<div class="form-group">
			<%= form.submit 'Enregistrer', class: 'btn btn-success' %>
		</div>

	</div>
</div>

<% end %>