<div class="d-flex justify-content-center mb-5 mt-5">
  <h1> C'est quoi le doss ?' </h1>
</div>

<%= form_with model: @event, local: true do |form| %>

<div class="container col-lg-8 col-md-3 col-sm-12 ">
	<div class="form-row ">
    <div class="col-md-6 mb-3 font-weight-bold">
			<%= form.label :title, 'Titre' %><br>
			<%= form.text_field :title, class: 'form-control' , required: true, placeholder: 'Le sus-nomé ...' %>
    </div>
  </div>

  <div class="form-group">
    <div class="mb-3 font-weight-bold">
			<%= form.label :description, 'Description' %><br>
			<%= form.text_area :description, class: 'form-control' , required: true, placeholder: "C'est simple, le Rojis là on dirait pas comme ça mais..." %>
		</div>
  </div>

  <div class="form-group">
    <h4>Photo à l'appuis !</h4>

      <%= form.file_field :event_picture %>
  </div>


	<div class="">
		<%= form.submit 'Enregistrer', class: 'btn btn-primary btn-lg btn-block' %>
	</div>

</div>


<% end %>
