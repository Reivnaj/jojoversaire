<div class="card mt-3 mb-3">
	
	<div class="card-header">
		<h5 class="card-title"><%=event.title%></h5>
		<h6 class="card-subtitle mb-2 text-muted">
			Créé par <%= link_to event.admin.first_name, user_path(event.admin) %>, 
      le <%= event.created_at.strftime("%d/%m/%Y à %H:%I") %>
		</h6>
	</div>
	
	<div class="card-body">
		<p class="card-text"><%=event.description.length > 200 ? event.description[0..200] + "..." : event.description %></p>
	</div>

	<div class="card-footer bg-transparent">
		<%= link_to 'En savoir plus', '#', { :class=>"card-link btn btn-secondary" } %>
	</div>
	
	<div class="card-footer">
		<div class="d-flex justify-content-between">
			<span class="card-text text-muted">Prix : <%= event.price %></span>
			<span class="card-text text-muted">Lieu : <%= event.location %></span>
		</div>
	</div>
</div>